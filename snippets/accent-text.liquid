{%- liquid
    assign color = color | default: settings.color_heading_accent
    assign color_alpha = color | color_modify: 'alpha', 0.5
    if t_text != blank
        assign text = t_text | t
    endif
-%}
<span class="#accent-text" style="--accent: linear-gradient(90deg, transparent 0, {{ color_alpha }} 15%, {{ color_alpha }} 85%, transparent 100%)">{{ text }}</span>