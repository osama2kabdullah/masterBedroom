{%- liquid
    assign NS = 'social-profiles'
    assign cn = '#' | append: NS
    if new_tab
        assign new_tab_attr = 'target="_blank" rel="noopener noreferrer"'
    endif
    unless lazyload == false
        assign lazyload = true
    endunless
-%}

{% render 'load-css', file: NS %}

<nav class="{{ cn }}" role="list">
    {% if settings.social_facebook_link != blank %}        
        <a class="{{ cn }}-item" href="{{ settings.social_facebook_link }}" {{ new_tab_attr }} aria-describedby="a11y-external-message">
            <span class="{{ cn }}-item-icon">
                {% render 'icon', name: 'facebook' %}
            </span>
            <span class="{{ cn }}-item-title {% unless show_titles %}visually-hidden{% endunless %}">
                {{ 'general.social.links.facebook' | t }}
            </span>
        </a>
    {% endif %}
