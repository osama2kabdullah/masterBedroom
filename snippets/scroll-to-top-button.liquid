{% liquid
    assign NS = 'scroll-to-top-button'
    assign cn = '#' | append: NS
%}

{% render 'load-css', file: NS %}

<{{ NS }}>
    <div data-trigger class="{{ cn }}-trigger"></div>
    <div data-button class="{{ cn }}-button">
        {% render 'icon', name: 'angle-up' %}
    </div>
</{{ NS }}>

<script type="module" src="{{ NS | append: '.js' | asset_url }}"></script>