{%- liquid
    assign variant = product.selected_or_first_available_variant
    assign no_params_product_url = product.url | split: '?' | first
    assign product_form_id = 'productForm' | append: section.id | append: product.id 
    assign cn = '#product'
    
    assign cart_limit_reached = false
    if variant.inventory_management != nil and variant.inventory_policy != 'continue'
        assign variant_cart_qty = 0
        for line_item in cart.items
            if line_item.variant_id == variant.id
                assign variant_cart_qty = variant_cart_qty | plus: line_item.quantity
                if variant_cart_qty == variant.inventory_quantity
                    assign cart_limit_reached = true
                    break
                endif
            endif
        endfor
    endif

    if template.suffix == 'quick-view'
        assign quick_view_modal_id = 'ProductQuickView-' | append: product.id
        assign quick_view = true
        assign gap = '3rem'
    else
        assign quick_view = false
        assign gap = '5rem'
    endif
    assign gallery_width = section.settings.gallery_width
-%}

{%- capture gallery_image_srcsize_desktop -%}min(100vw, {{ settings.container_width }}px) * {{ gallery_width | divided_by: 100.0 }} - 70px - 1.5rem{%- endcapture -%}
{%- capture gallery_image_srcsize_mobile -%}90vw{%- endcapture -%}

{%- if quick_view -%}
    {%- capture Popup_content -%}
        <modal-trigger class="#modal-popup-back" url="{{ product.url | split: '?' | first }}?view=quick-view" target="#{{ quick_view_modal_id }}" container close-button>
            {% render 'icon', name: 'arrow-left' %}
            {{ 'products.product.back_to_product' | t }}
        </modal-trigger>
    {%- endcapture -%}
{%- endif -%}

{%- capture Gallery -%}
    <div class="{{ cn }}-media">
        {% render 'product-gallery', 
            use_zoom: section.settings.slideshow_zoom, 
            quick_view: quick_view,
            image_srcsize_desktop: gallery_image_srcsize_desktop,
            image_srcsize_mobile: gallery_image_srcsize_mobile,
            popup_content: Popup_content,
            thumbnails_layout: section.settings.thumbnails_layout
        %}
    </div>
{%- endcapture -%}

{%- capture Meta -%}
    <div class="{{ cn }}-meta">
        {% render 'product-info-loading' %}
        {% for block in section.blocks %}
            {%- capture Block_content -%}
            {% case block.type %}
                {% when 'buy_with' %}
                    {% render 'load-css', file: 'product-buy-with' %}
                    <product-variant-listener emptyable section-id="{{ section.id }}" id="b-{{ block. id }}">
                        {% render 'product-buy-with', product: product, variant: variant, product_form_id: product_form_id, cart_limit_reached: cart_limit_reached, show_total: block.settings.show_total %}
                    </product-variant-listener>
                {% when 'title' %}
                    <h1 class="{{ cn }}-title {% if block.settings.max_lines > 0 %}@line-clamp{% endif %} fs-{{ block.settings.size }} heading-font" style="--line-clamp: {{ block.settings.max_lines }};">
                        {% if quick_view %}
                            <a class="unstyled-link" href="{{ product.url }}">{{ product.title }}</a>
                        {% else %}
                            {{ product.title }}
                        {% endif %}
                    </h1>

                {% when 'price' %}
                    <product-variant-listener section-id="{{ section.id }}" id="b-{{ block.id }}">
                        <div class="{{ cn }}-price">
                            {% render 'price',
                                variant: variant,
                                show_save_price: block.settings.show_savings,
                                show_titles: block.settings.show_savings
                            %}
                        </div>
                        {%- if block.settings.show_taxes -%}
                            <div class="{{ cn }}-price-tax-note">
                                {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                                    {{ 'sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
                                {%- elsif cart.taxes_included -%}
                                    {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
                                {%- elsif shop.shipping_policy.body != blank -%}
                                    {{ 'sections.cart.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
                                {%- else -%}
                                    {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
                                {%- endif -%}
                            </div>
                        {%- endif -%}
                        <div {{ block.shopify_attributes }}>
                            {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                            {%- form 'product', product, id: product_form_installment_id -%}
                                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                                {{ form | payment_terms }}
                            {%- endform -%}
                        </div>
                    </product-variant-listener>

                {% when 'buy_buttons' %}
                        {%- render 'product-form', 
                            variant: variant, 
                            product_form_id: product_form_id,
                            id: block.id,
                            use_stock_notifier: block.settings.enable_stock_notifier,
                            show_dynamic_checkout: block.settings.show_dynamic_checkout,
                            quick_view: quick_view,
                            cart_limit_reached: cart_limit_reached,
                            show_gift_card_recipient: block.settings.show_gift_card_recipient
                        -%}
                        {% if quick_view %}    
                            <a class="{{ cn }}-quick-view-product-link styled-link" href="{{ product.url }}">
                                {{ 'products.product.more_details' | t }}
                            </a>
                        {% endif %}

                {% when 'variant_selector' %}
                    {%- unless product.has_only_default_variant -%}
                        {% render 'product-variant-selector', 
                            picker_type: block.settings.picker_type,
                            color_swatches: block.settings.color_swatches,
                            align_options: block.settings.align_option_values,
                            product_form_id: product_form_id,
                            show_stock_alert: block.settings.show_stock_alert,
                            variant: variant
                        %}
                    {%- endunless -%}   

                {% when 'quantity_selector' %}
                    {%- render 'product-qty-selector', 
                        id: block.id, 
                        product_form_id: product_form_id,
                        type: block.settings.input_type,
                        variant: variant,
                        cart_limit_reached: cart_limit_reached
                    -%}
                {% when 'payment_methods' %}
                    {%- if shop.enabled_payment_types != blank -%}
                        {% render 'product-payment-methods', center: block.settings.center %}
                    {%- endif -%}
                
                {% when 'sku' %}
                    <product-variant-listener section-id="{{ section.id }}" id="b-{{ block.id }}">
                        {{ 'customer.order.sku' | t }}: {{ variant.sku }}
                    </product-variant-listener>


                {% when 'stock_alert' %}
                    {%- if block.settings.show_stock_alert -%}
                        {%- assign stock_threshold = settings.stock_threshold -%}
                    {%- endif -%}
                    {% render 'load-css', file: 'product-stock-alert' %}
                    <product-variant-listener section-id="{{ section.id }}" id="b-{{ block.id }}">
                        {%- render 'product-stock-alert',
                            id: block.id,
                            product: product,
                            stock_threshold: stock_threshold,
                            cart_limit_reached: cart_limit_reached
                        -%}
                    </product-variant-listener>

                {% when 'pickup_availability' %}
                    {% render 'load-css', file: 'product-pickup-availability' %}
                    <product-variant-listener section-id="{{ section.id }}" emptyable id="b-{{ block.id }}">
                        {%- render 'product-pickup-availability'
                            product: product,
                            id: block.id,
                            variant: variant
                        -%}    
                    </product-variant-listener>
                
                {% when 'feature' %}
                    {% render 'product-feature',
                        icon: block.settings.icon,
                        heading: block.settings.heading,
                        subheading: block.settings.subheading
                    %}

                {% when 'description' %}
                    {% if product.description != blank %}
                        {%- capture description -%}
                            <div class="{{ cn }}-description">
                                {{ product.description }}
                            </div>
                        {%- endcapture -%}
                        {%- if block.settings.use_expand -%}
                            {% render 'product-description-expand', description: description %}
                        {%- else -%}
                          {{ description }}
                        {%- endif -%}
                    {% endif %}

                {% when 'rating' %}
                    {%- render 'product-reviews',
                        product: product,
                        show_count: block.settings.show_count
                    -%}
                    
                {% when 'separator' %}
                    <hr {{ block.shopify_attributes }}>
                
                {% when 'text' %}
                    {% if block.settings.text != blank %}
                        <div class="#rte-block {% if block.settings.text_uppercase %}@upcase{% endif %} fs-{{ block.settings.size }}">
                            {{ block.settings.text }}
                        </div>
                    {% endif %}

                {% when 'popup' %}
                    {% if block.settings.text != blank %}
                        {%- assign font_size = block.settings.font_size_scale | times: 0.01 -%}
                        {%- assign popup_id = 'productPopup' | append: section.id | append: block.id -%}
                        <template id="{{ popup_id }}">
                            {% render 'load-css', file: 'product' %}  
                            <div class="#container @width:{{ block.settings.popup_width }}">
                                <div class="{{ cn }}-popup">
                                    {{ Popup_content }}
                                    {%- if block.settings.page != blank -%}
                                        <div class="#rte" style="--font-size: {{ font_size }}rem;">
                                            {% if block.settings.show_page_title %}
                                                <h1>{{ block.settings.page.title }}</h1>
                                            {% endif %}
                                            {{ block.settings.page.content }}
                                        </div>
                                    {%- else -%}
                                        {%- if request.design_mode -%}
                                            {% render 'editor-notification',
                                                t_heading: 'products.product.popup.no_page'
                                            %}
                                        {%- endif -%} 
                                    {%- endif -%}
                                </div>
                            </div>
                        </template>
                        {%- if block.settings.page != blank or request.design_mode -%}
                            {%- capture Link -%}
                                <modal-trigger 
                                    class="styled-link" 
                                    target="#{{ popup_id }}"
                                    close-button
                                >{{ block.settings.text }}</modal-trigger>
                            {%- endcapture -%}
                            {%- if block.settings.icon != blank -%}
                                <div class="{{ cn }}-popup-link">
                                    {% render 'icon', name: block.settings.icon, load: true %}
                                    {{ Link }}
                                </div>
                            {%- else -%}
                                {{ Link }}
                            {%- endif -%}
                        {%- endif -%}
                    {% endif %}

                {% when 'share' %}
                    {% render 'share',
                        share_permalink: product.url,
                        share_title: product.title,
                        share_image: product.featured_image,
                        use_brand_colors: block.settings.use_colors
                    %}        
                    
                {% when 'custom_html' %}
                    {% if block.settings.html != blank %}
                        {% if block.settings.heading != blank %}
                            <h5>{{ block.settings.heading }}</h5>
                        {% endif %}
                        <div>{{ block.settings.html }}</div>
                    {% endif %}

                    
                {% when 'product_options_list' %}
                    {%- unless product.has_only_default_variant -%}
                        {%- render 'product-options-list',
                            show_sku: block.settings.show_sku,
                            id: block.id,
                            product: product,
                            enable_sorting: block.settings.enable_sorting,
                            enable_stock_sort: block.settings.enable_stock_sort,
                            popup_content: Popup_content
                        -%}
                    {% endunless %}

                {% when 'custom_image' %}
                    {% if block.settings.heading != blank %}
                        <h5>{{ block.settings.heading }}</h5>
                    {% endif %}
                    <div>
                        {% render 'media',
                            image: block.settings.image,
                            link: block.settings.link
                        %}
                    </div>

                {% when '@app' %}
                    {% render block %}
                    
                {% when 'specs' %}
                    <product-variant-listener section-id="{{ section.id }}" id="b-{{ block.id }}" emptyable>
                        {% render 'product-specs', product: product %}
                    </product-variant-listener>
                {% when 'custom_property' %}
                    <product-variant-listener section-id="{{ section.id }}" id="b-{{ block.id }}" emptyable>
                        {%- unless cart_limit_reached -%}
                            {%- assign property_input_id = 'property-' | append: block.settings.name | append: block.id -%}
                            <div class="{{ cn }}-custom-property">
                                <label class="{{ cn }}-custom-property-name" for="{{ property_input_id }}">{{ block.settings.name }}</label>
                                <input type="hidden" form="{{ product_form_id }}" name="customPropertyReference" value="{{ block.settings.name | escape }}">
                                <input
                                    class="{{ cn }}-custom-property-value"
                                    type="text"
                                    id="{{ property_input_id }}"
                                    form="{{ product_form_id }}"
                                    name="properties[{{ block.settings.name | escape }}]"
                                >
                            </div>
                        {%- endunless -%}
                    </product-variant-listener>
                {% else %}
                    {% if block.type contains 'collapsible_tab' %}
                        {% render 'product-collapse',
                            block: block,
                            product: product
                        %}
                    {% endif %}     
            {% endcase %}
            {%- endcapture -%}
            {% if Block_content != blank %}
                <div class="{{ cn }}-meta-block {% if block.settings.prev_attach %}@attach{% endif %} {% if block.type contains 'collapsible_tab' %}@collapse{% endif %}" data-meta-block {{ block.shopify_attributes }}>
                    {% if block.settings.meta_heading != blank %}
                        <h4 class="{{ cn }}-meta-heading">{{ block.settings.meta_heading }}</h4>
                    {% endif %}
                    {{ Block_content }}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{%- endcapture -%}


{%- capture Content -%}
    <div class="{{ cn }}">
        {%- unless quick_view -%}
            {%- if settings.show_breadcrumb_nav -%}
                {% render 'breadcrumbs' %}
            {%- endif -%}
        {%- endunless -%}
        {% render 'load-css', file: 'product' %}
        {% if quick_view %}
            {% render 'load-css', file: 'product-quick-view', lazy: true %}
        {% endif %}  
        <div class="#grid @type:template {{ cn }}-grid" style="--template: {{ gallery_width }}% minmax(0, 1fr); --template-mobile: none; --gap: {{ gap }};">
            <div>
                {{ Gallery }}            
            </div>
            <div>            
                {{ Meta }}
            </div>
        </div>
    </div>
    <script type="module" src="{{ 'product-variant-listener.js' | asset_url }}"></script>
    <script type="module" src="{{ 'product-form.js' | asset_url }}"></script>
{%- endcapture -%}


{%- if quick_view -%}
    <template id="{{ quick_view_modal_id }}">
        <div class="{{ cn }}-quick-view shadow-4">
            {{ Content }}
        </div>
    </template>
{%- endif -%}

{%- if quick_view == false or request.design_mode -%}
    {%- if quick_view and request.design_mode -%}
        {% render 'editor-notification',
            t_heading: 'general.editor.quick_view_message'
        %}
    {%- endif -%}
    {% render 'section-body',
        content: Content,
        container: 'container',
        spaced: true
    %}
{%- endif -%}

{% render 'browsing-history-track' %}

<script type="module" src="{{ 'custom-select.js' | asset_url }}"></script>

{%- liquid
    if product.selected_or_first_available_variant.featured_media
        assign seo_media = product.selected_or_first_available_variant.featured_media
    else
        assign seo_media = product.featured_media
    endif
-%}
  
<script type="application/ld+json">
    {
    "@context": "http://schema.org/",
    "@type": "Product",
    "name": {{ product.title | json }},
    "url": {{ shop.url | append: product.url | json }},
    {% if seo_media -%}
        {%- assign media_size = seo_media.preview_image.width | append: 'x' -%}
        "image": [
        {{ seo_media | img_url: media_size | prepend: "https:" | json }}
        ],
    {%- endif %}
    "description": {{ product.description | strip_html | json }},
    {% if product.selected_or_first_available_variant.sku != blank -%}
        "sku": {{ product.selected_or_first_available_variant.sku | json }},
    {%- endif %}
    "brand": {
        "@type": "Thing",
        "name": {{ product.vendor | json }}
    },
    "offers": [
        {%- for variant in product.variants -%}
        {
            "@type" : "Offer",
            {%- if variant.sku != blank -%}
            "sku": {{ variant.sku | json }},
            {%- endif -%}
            "availability" : "http://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}",
            "price" : {{ variant.price | divided_by: 100.00 | json }},
            "priceCurrency" : {{ cart.currency.iso_code | json }},
            "url" : {{ shop.url | append: variant.url | json }}
        }{% unless forloop.last %},{% endunless %}
        {%- endfor -%}
    ]
    }
</script>

